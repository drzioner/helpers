{
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "src/**/*.test.ts"],
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
