{
  "name": "@drzioner/helpers",
  "version": "0.4.0",
  "description": "Zero-dependency TypeScript utility library for dates, math, files, and strings",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "build": "tsup",
    "validate": "pnpm build && publint && attw --pack",
    "prepublishOnly": "pnpm lint && pnpm test && pnpm validate",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint && pnpm typecheck"
  },
  "keywords": [
    "helpers",
    "typescript",
    "utilities",
    "date",
    "math",
    "files",
    "strings",
    "zero-dependency"
  ],
  "author": "drzioner <drzioner@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@biomejs/biome": "2.3.14",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@types/node": "25.2.3",
    "@vitest/coverage-v8": "4.0.18",
    "publint": "0.3.17",
    "rimraf": "6.1.2",
    "simple-git-hooks": "2.13.1",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drzioner/helpers.git"
  },
  "bugs": {
    "url": "https://github.com/drzioner/helpers/issues"
  },
  "homepage": "https://github.com/drzioner/helpers#readme",
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
